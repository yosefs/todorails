<h2>Items</h2>

<table class="table table-striped">
  <tr>
    <th>Body</th>
    <th>edit</th>
    <th>delete</th>
  </tr>
<% @items.each do |item| %>
  <tr>
    <td><%= item.body %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

